{
    "publisher": "Nari",
    "name": "to-snippet-body",
    "displayName": "To Snippet Body",
    "description": "Easy creation of snippets.",
    "version": "1.0.1",
    "engines": {
        "vscode": "^1.87.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Yananari/to-snippet-body"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "to-snippet-body.convert",
                "title": "Convert",
                "category": "To Snippet Body"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/vscode": "^1.87.0",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "@vscode/test-cli": "^0.0.6",
        "@vscode/test-electron": "^2.3.9",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3"
    }
}
